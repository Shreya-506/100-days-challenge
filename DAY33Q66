// Insert an element in a sorted array at the appropriate position.

#include <stdio.h>
int main() {
    int arr[100]; 
    int size, element, i, position;

    printf("Enter the number of elements in the array (max 99): ");
    scanf("%d", &size);

    if (size >= 100) {
        printf("Array size exceeds maximum capacity.\n");
        return 1; 
    }

    printf("Enter %d elements in ascending order:\n", size);
    for (i = 0; i < size; i++) {
        printf("Element %d: ", i + 1);
        scanf("%d", &arr[i]);
    }

    printf("Enter the element to be inserted: ");
    scanf("%d", &element);
    position = 0;
    while (position < size && arr[position] < element) {
        position++;
    }
    for (i = size - 1; i >= position; i--) {
        arr[i + 1] = arr[i];
    }
    arr[position] = element;
    size++; 

    printf("Array after insertion:\n");
    for (i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
