// Find the digit that occurs the most times in an integer number.

#include <stdio.h>
int main() {
    long long num; 
    printf("Enter an integer number: ");
    scanf("%lld", &num);
    int frequency[10] = {0};
    int digit;
    if (num < 0) {
        num = -num;
    }
    if (num == 0) {
        frequency[0]++;
    }
    while (num > 0) {
        digit = num % 10; 
        frequency[digit]++; 
        num /= 10; 
    }
    int max_frequency = -1;
    int most_frequent_digit = -1;
    for (int i = 0; i < 10; i++) {
        if (frequency[i] > max_frequency) {
            max_frequency = frequency[i];
            most_frequent_digit = i;
        }
    }

    printf("The digit that occurs the most times is: %d (occurring %d times)\n", most_frequent_digit, max_frequency);

    return 0;
}
