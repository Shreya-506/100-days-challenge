// Write a program to print the following pattern:
    *
  * * *
* * * * *
  * * *
    *
#include <stdio.h>

int main() {
    int rows, i, j, space;

    printf("Enter the number of rows for the diamond (odd number recommended): ");
    scanf("%d", &rows);
    if (rows % 2 == 0) {
        rows++; 
    }
    for (i = 1; i <= (rows + 1) / 2; i++) {
        for (space = 1; space <= (rows + 1) / 2 - i; space++) {
            printf(" ");
        }
        for (j = 1; j <= 2 * i - 1; j++) {
            printf("*");
        }
        printf("\n");
    }
    for (i = (rows + 1) / 2 - 1; i >= 1; i--) {
        for (space = 1; space <= (rows + 1) / 2 - i; space++) {
            printf(" ");
        }
        for (j = 1; j <= 2 * i - 1; j++) {
            printf("*");
        }
        printf("\n");
    }
       return 0;
}
