// Search in a sorted array using binary search.

#include <stdio.h>

int main() {
    int array[] = {2, 5, 8, 12, 16, 23, 38, 56, 72, 91}; 
    int n = sizeof(array) / sizeof(array[0]); 
    int search_element = 23; 
    int first = 0;
    int last = n - 1;
    int middle;
    int found_index = -1; 

    while (first <= last) {
        middle = first + (last - first) / 2; 

        if (array[middle] == search_element) {
            found_index = middle;
            break; // Element found, exit the loop
        } else if (array[middle] < search_element) {
            first = middle + 1; // Search in the right half
        } else {
            last = middle - 1; // Search in the left half
        }
    }
    if (found_index != -1) {
        printf("Element %d found at index %d.\n", search_element, found_index);
    } else {
        printf("Element %d not found in the array.\n", search_element);
    }

    return 0;
}
