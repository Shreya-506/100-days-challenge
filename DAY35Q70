// Rotate an array to the right by k positions.

#include <stdio.h>

int main() {
    int size;
    printf("Enter the size of the array: ");
    scanf("%d", &size);

    int arr[size];
    printf("Enter %d elements for the array:\n", size);
    for (int i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    int k;
    printf("Enter the number of positions to rotate right: ");
    scanf("%d", &k);
    k = k % size;
    for (int rotation_count = 0; rotation_count < k; rotation_count++) {
        int last_element = arr[size - 1]; // Store the last element
        for (int i = size - 1; i > 0; i--) {
            arr[i] = arr[i - 1];
        }

        arr[0] = last_element; 
    }
    printf("Array after rotation:\n");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
